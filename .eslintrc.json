{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard", "plugin:json/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["json", "@typescript-eslint/eslint-recommended"],
  "rules": {
    "quotes": ["error", "double"],
    "quote-props": ["error", "always"],
    "json/*": ["error", "allowComments"],
    "semi": ["error", "always"],
    "no-useless-constructor": "off",
    "space-before-function-paren": [
      "error",
      {
        "named": "never",
        "anonymous": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "ignorePatterns": [
    "dist/**/*.js",
    "node_modules/**/*",
    "package-lock.json",
    "yarn.lock"
  ]
}
